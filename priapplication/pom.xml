        <artifactId>p1-parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <artifactId>p1</artifactId>
    <packaging>jar</packaging>
    <name>Prime numbers demo</name>
    <description>Prime numbers Demo project for Spring Boot</description>
    <properties>
        <mainClass>com.example.gradle.p1.DemoApplication</mainClass>
    </properties>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
